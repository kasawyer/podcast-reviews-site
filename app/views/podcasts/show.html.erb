
<h1><%= @podcast.name %></h1>

<ul class="podcast-info">
  <li> <%= "Provider: #{@podcast.provider.name}" %> </li>

  <% if !podcast.categories.empty? %>
  <li>
    <%= 'Category:' %> <br/>
    <% @podcast.categories.each do |category| %>
     <%= category.name %> <br/>
    <% end %>
  </li>
  <% end %>

  <% if !@podcast.description.nil? && !@podcast.description.empty? %>
  <li>
    <%= "Description: #{@podcast.description}" %>
  </li>
  <% end %>

  <% if !@podcast.hosts.empty? %>
  <li> Host(s):
    <% @podcast.hosts.each do |host| %>
      <%= host.name %> <br/>
    <% end %>
  </li>
  <% end %>

  <% if @podcast.release_year %>
  <li>
    <%= "Release year: #{@podcast.release_year}" %>
  </li>
  <% end %>

  <% if @podcast.image_url %>
  <li>
    <img src="<%=@podcast.image_url%>"/>
  </li>

  <% if @podcast.itunes_url %>
  <li>
    <%= "Listen on iTunes: #{@podcast.itunes_url}" %>
  </li>
  <% end %>

  <% if @podcast.soundcloud_url %>
  <li>
    <%= "Listen on SoundCloud: #{@podcast.soundcloud_url}" %>
  </li>
  <% end %>
</ul>
<br/>

<h2>Add a review:</h2>

<%= form_for [@podcast, @review] do |f| %>
  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div class="field">
    <%= f.label :body, "Review" %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Add review"%>
  </div>
<% end %>
<br/>

<% if @reviews %>
  <h2>Reviews:</h2>
  <ul>
  <% @reviews.each do |review| %>
    <li>
      <%= "#{review.rating}: #{review.body}" %>
    </li>
  <% end %>
  </ul>
<% end %>

<%= link_to "Back to podcasts", podcasts_path %>
