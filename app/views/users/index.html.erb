<div class="page-body">
  <h1>All Users</h1>

  <ul>
    <% @users.each do |user| %>
      <div class="podcast-list-item">
        <div class="podcast-name">
          <%= user.name %>
        </div>
        <div class="provider-name">
          <%= user.email %>
        </div>
      </div>
      <div>
        <%= link_to "DELETE", user_path(user.id), method: :delete,
        data: { confirm: 'Are you sure?' }, class: "user-delete" %>
      </div>
      <br/>
    <% end %>
  </ul>
</div>
